<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Super user</th>
      <th>Office</th>
      <th>Created_at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.super_user %></td>
        <td><%= user.office %></td>
        <td><%= format_date(user.created_at) %></td>
        <td><%= link_to 'Show', user, class: "waves-effect waves-light btn-flat btn-table" %></td>
        <td><%= link_to 'Edit', edit_user_path(user), class: "waves-effect waves-teal btn-flat btn-table" %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: "waves-effect waves-red btn-flat btn-table" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

