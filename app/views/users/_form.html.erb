<%= form_with(model: user, local: true, class: "card form-newuser-container") do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <h1>User</h1>

  <div class="field">
    <div class="input-field col s12">
      <%= form.label :name %>
      <%= form.text_field :name %>
    </div>
  </div>

  <div class="field">
    <div class="input-field col s12">
      <%= form.label :office %>
      <%= form.text_field :office %>
    </div>
  </div>

  <div class="field">
    <div class="form-newuser-check-box">
      <%= form.label :super_user do %>
        <%= form.check_box :super_user, class: "filled-in" %>
        <span>super user?</span>
      <% end %>
    </div>
  </div>

  <div class="actions">
    <%= form.submit( "send", class: "waves-effect waves-light btn" ) %>
    <%= link_to 'Back', users_path, class: "waves-effect waves-light btn btn-back" %>
  </div>
<% end %>
