<p id="notice"><%= notice %></p>

<h1>Stores</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Codename</th>
      <th>Kind</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stores.each do |store| %>
      <tr>
        <td><%= store.description %></td>
        <td><%= store.codename %></td>
        <td><%= store.kind %></td>
        <td>
          <% if( can? :read, Store ) %>
            <%= link_to 'Show', store %>
          <% end %>
        </td>
        <td>
          <% if( can? :update, Store ) %>
            <%= link_to 'Edit', edit_store_path(store) %>
          <% end %>
        </td>
        <td>
          <% if( can? :destroy, Store ) %>
            <%= link_to 'Destroy', store, method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

